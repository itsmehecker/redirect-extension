{
  "manifest_version": 3,
  "name": "Website Redirector",
  "version": "1.0",
  "description": "Redirect websites according to user configuration.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
